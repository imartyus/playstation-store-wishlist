{
  "name": "PlayStation Store Wishlist",
  "description": "Replacement for the deprecated Wishlist on PSN Store",
  "version": "1.0.0",
  "author": "Ivan M",
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "https://store.playstation.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PlayStation Store Wishlist",
    "default_icon": {
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}